{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    {% block fos_user_content %}
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
                    <div style="margin: 17% auto; width: 400px;">
                        <div class="login-logo">
                            <a href="{{ path('homepage') }}" title="">
                                <img src="{{ asset('images/Logo.png') }}" width="200" height="100%" >
                            </a>
                        </div>
                        <div class="box box-solid" style="border: 1px solid #C9C9C9;">
                            <div class="box-body" style="padding: 20px;">
                                <p class="login-box-msg">
                                    <strong>RESTABLECER CONTRASEÃ‘A</strong>
                                </p>
                                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                                    {{ form_widget(form) }}
                                    <input class="btn btn-primary btn-flat pull-right" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
