{% extends "FOSUserBundle::layout.html.twig" %}

{% block content %}
    {% block fos_user_content %}
		<div class="login-box">
            <div class="login-logo">
                <a href="{{ path('homepage') }}" title="">
                    <img src="{{ asset('images/Logo.png') }}" width="200" height="100%" >
                </a>
            </div>
            <div class="login-box-body">
                <p class="login-box-msg"><strong>REGISTRO</strong></p>
				{% trans_default_domain 'FOSUserBundle' %}
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
					<div class="row">
						<div class="col-xs-6" style="padding-right: 7px;">
							<div class="form-group" style="margin-bottom: 0;">
								{{ form_widget(form.firstName) }}
								{{ form_errors(form.firstName) }}
							</div>
						</div>
						<div class="col-xs-6" style="padding-left: 7px;">
							<div class="form-group" style="margin-bottom: 0;">
								{{ form_widget(form.lastName) }}
								{{ form_errors(form.lastName) }}
							</div>
						</div>
					</div>
					<hr>
					<div class="form-group has-feedback">
						{{ form_widget(form.email) }}
						<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
						{{ form_errors(form.email) }}
					</div>
					{# <div class="form-group has-feedback">
						{{ form_widget(form.username) }}
						<span class="glyphicon glyphicon-user form-control-feedback"></span>
					</div> #}
					<div class="form-group has-feedback">
						{{ form_widget(form.plainPassword.first) }}
						<span class="glyphicon glyphicon-lock form-control-feedback"></span>
						{{ form_errors(form.plainPassword.first) }}
					</div>
					<div class="form-group has-feedback">
						{{ form_widget(form.plainPassword.second) }}
						<span class="glyphicon glyphicon-lock form-control-feedback"></span>
						{{ form_errors(form.plainPassword.second) }}
					</div>
				    <div class="row">
				    	<div class="col-md-6">
				    		<a href="{{ path('fos_user_security_login') }}" title="Ya poseo cuenta">Ya poseo cuenta</a>
				    	</div>
				    	<div class="col-md-6">
				    		<input class="btn btn-primary btn-flat pull-right" type="submit" value="{{ 'registration.submit'|trans }}" />
				    	</div>
				    </div>
				{{ form_end(form) }}
            </div>
        </div>
    {% endblock %}
{% endblock %}
