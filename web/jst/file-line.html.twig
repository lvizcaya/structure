{% if file.name|length > 8 %}
	{% set name = file.name|slice(0,3) ~ '..' ~ file.name|slice(file.name|length - 3, 3) %}
{% else %}
	{% set name = file.name %}
{% endif %}

{% if file.type|slice(0,5) == 'image' %}
	{% set icon = 'fa-file-image-o' %}
	{% set color = '#3c8dbc' %}
{% elseif file.type == 'application/pdf' %}
	{% set icon = 'fa-file-pdf-o' %}
	{% set color = '#b90000' %}
{% else %}
	{% set icon = 'fa-file-o' %}
	{% set color = '#6e6e6e' %}
{% endif %}

<span style="float: left; padding-right: 25px; margin-top: 10px;">
    <a class="aFile" href="javascript:void(0);" title="{{ file.name }}" data-name="{{ file.name }}" data-dir="{{ dir }}"><i class="fa {{ icon }}" style="font-size: 55px; color:{{ color }};"></i></a>
    <div class="text-center">
    	{{ name }}
    	<a class="fDelete" href="javascript:void(0);" title="Borrar el archivo" data-name="{{ file.name }}" data-dir="{{ dir }}"><i class="fa fa-trash-o red" style="color: #dd4b39"></i></a>
    </div>
</span>